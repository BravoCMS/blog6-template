<{extends 'layout/layout.tpl'}><{block name="template-name"}>    /articles.tpl<{/block}><{block name=title}>    <{$module.name|htmlspecialchars}><{/block}><{block name="module"}>    <{$module.text}>    <div class="content content_long">        <section class="main_content">            <div id="products_table" class="products_table">               <div class="articles_container">                   <div class="category cat_04 layout layout_03">                       <div class="category_04 articles clearfix">                            <{foreach $articles as $article}>                                <div class="article_details short post_rss text_rss clearfix">                                    <{if $article.cover}>                                        <div class="post_content_rss text_content_rss">                                            <a href="<{$article.relative_url}>" class="intro_thumbnail_rss">                                                <img src="<{$article.cover.photo_file_small}>" style="width: 100%;" class="post_thumbnail_rss" />                                            </a>                                            <p class="desc_short_news intro_rss text_intro_rss">                                                <{$article.intro|htmlspecialchars}>                                            </p>                                        </div>                                    <{/if}>                                    <time class="sprite">                                        <span class="date_rss">                                             <{$article.publish_date|htmlspecialchars}>                                        </span>                                    </time>                                        <a href="<{$article.relative_url}>" class="post_permalink_rss trigger">                                            <h2 class="post_title_rss">                                                <div class="text_taylor">                                                    <{$article.short_name|htmlspecialchars}>                                                </div>                                            </h2>                                        </a>                                </div>                            <{/foreach}>                        </div>                    </div>                </div>            </div>        </section>    </div>    <div class="row">        <{include 'misc/pagination.tpl'}>    </div><{/block}>